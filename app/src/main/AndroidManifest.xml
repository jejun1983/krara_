<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="m.idevel.hansolhomedeco">

  <application
    android:allowBackup="false"
    android:hardwareAccelerated="true"
    android:icon="@mipmap/lasola"
    android:label="@string/app_name"
    android:largeHeap="true"
    android:name="m.idevel.hansolhomedeco.MyApplication"
    android:requestLegacyExternalStorage="true"
    android:theme="@style/MyAppTheme"
    android:usesCleartextTraffic="true">

    <activity
      android:configChanges="locale|keyboard|keyboardHidden|orientation|uiMode|screenSize|fontScale|smallestScreenSize|screenLayout"
      android:exported="true"
      android:label="@string/app_name"
      android:launchMode="singleTask"
      android:name="m.idevel.hansolhomedeco.activity.MainActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- scheme-->
        <data
          android:host="show-app"
          android:scheme="idevel-hansolhomedeco" />
      </intent-filter>
    </activity>

    <activity
      android:excludeFromRecents="true"
      android:exported="false"
      android:name="m.idevel.hansolhomedeco.activity.PushPopupActivity"
      android:screenOrientation="unspecified"
      android:taskAffinity="com.medialog.umobi.pushPopup"
      android:theme="@android:style/Theme.Dialog" />

    <!-- ACTIVITY -->
    <activity
      android:exported="false"
      android:name="m.idevel.hansolhomedeco.activity.DevActivity"
      android:theme="@style/Base.Theme.AppCompat" />

    <activity
      android:exported="false"
      android:hardwareAccelerated="true"
      android:name="m.idevel.hansolhomedeco.activity.QrcodeScanActivity"
      android:screenOrientation="fullSensor"
      android:stateNotNeeded="true"
      android:windowSoftInputMode="stateAlwaysHidden"
      tools:replace="screenOrientation" />

    <!--DEV-->
    <activity
      android:exported="false"
      android:name="m.idevel.hansolhomedeco.activity.QrcodeCaptureActivity"
      android:screenOrientation="portrait"
      android:stateNotNeeded="true"
      tools:replace="android:screenOrientation" />


    <meta-data
      android:name="iap:api_version"
      android:value="5" />

    <meta-data
      android:name="iap:view_option"
      android:value="popup | full" />

    <!-- RECEIVER -->
    <!-- Network change receiver -->
    <meta-data
      android:name="com.google.android.gms.version"
      android:value="@integer/google_play_services_version" />

    <!-- DataSaver change receiver -->
    <receiver
      android:enabled="true"
      android:exported="false"
      android:label="DataSaverChange"
      android:name="m.idevel.hansolhomedeco.broadcast.DataSaverChangeReceiver"></receiver>

    <!-- Network Change receiver -->
    <receiver
      android:exported="false"
      android:name="m.idevel.hansolhomedeco.broadcast.NetworkChangeReceiver">
      <intent-filter>
        <action android:name="android.net.conn.BACKGROUND_DATA_SETTING_CHANGED" />
      </intent-filter>
    </receiver>

    <service
      android:exported="false"
      android:name="m.idevel.hansolhomedeco.fcm.FcmListenerService">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT" />
      </intent-filter>
    </service>


  </application>

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-permission android:name="android.permission.VIBRATE" />

  <!--  필수권한-->
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <uses-permission android:name="android.permission.GET_ACCOUNTS" />

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><!--  현재 기기 위치 -->
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

  <uses-permission android:name="android.permission.CAMERA" /><!--사진 찍기, 비디오 녹화 -->
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /><!--  사진, 미디어 파일 접근-->

  <uses-permission
    android:maxSdkVersion="29"
    android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>